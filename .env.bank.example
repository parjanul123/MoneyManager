# Bank Integration Environment Variables
# Copiază în .env și completează cu valorile tale

# ============================================
# REVOLUT API Configuration
# ============================================
REVOLUT_API_TOKEN=your_revolut_personal_token_here
REVOLUT_API_TIMEOUT=30

# ============================================
# BANCA TRANSILVANIA Configuration
# ============================================
BT_CLIENT_ID=your_bt_client_id
BT_CLIENT_SECRET=your_bt_client_secret
BT_API_TOKEN=your_bt_api_token
BT_API_TIMEOUT=30

# ============================================
# Bank Sync Configuration
# ============================================
BANK_AUTO_SYNC=True
BANK_SYNC_INTERVAL_HOURS=6
BANK_SYNC_DEFAULT_DAYS=30

# ============================================
# Security
# ============================================
BANK_TOKEN_ENCRYPTION_ENABLED=True
BANK_TOKEN_ENCRYPTION_KEY=your_encryption_key_here

# ============================================
# Logging
# ============================================
BANK_SYNC_LOG_LEVEL=INFO
BANK_SYNC_LOG_FILE=logs/bank_sync.log
